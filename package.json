{
  "name": "nwg-shop",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "dev": "next dev -p 1111",
    "build": "next build",
    "start": "next start -p 1111",
    "ts-check": "tsc --noemit",
    "lint": "eslint -c .eslintrc.js --ext .ts,.tsx src pages --quiet",
    "lint-style": "stylelint '**/*.css'",
    "format": "prettier --config .prettierrc 'src/**/*.{ts,tsx}' 'pages/**/*.{ts,tsx}' --write",
    "compile-contract-types": "typechain --target ethers-v5 --out-dir './src/contracts/types' './src/contracts/abi/**/*.json'",
    "prepare": "husky install"
  },
  "dependencies": {
    "next": "13.0.0",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "react-toastify": "^9.1.1"
  },
  "devDependencies": {
    "@types/node": "18.11.7",
    "@types/react": "18.0.24",
    "@typescript-eslint/eslint-plugin": "^5.43.0",
    "autoprefixer": "^10.4.13",
    "eslint": "8.26.0",
    "eslint-config-next": "13.0.0",
    "husky": "^8.0.1",
    "postcss": "^8.4.18",
    "postcss-preset-env": "^7.8.2",
    "prettier": "^2.7.1",
    "tailwindcss": "^3.2.1",
    "tslib": "^2.4.1",
    "typescript": "4.8.4"
  }
}
